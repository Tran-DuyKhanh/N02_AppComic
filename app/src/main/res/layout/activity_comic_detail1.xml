<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar có nút back -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        app:title="Chi tiết truyện"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hàng chứa ảnh + thông tin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Ảnh bìa -->
                <ImageView
                    android:id="@+id/imv"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop" />

                <!-- Phần thông tin -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <!-- Tên truyện -->
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên Sách 1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Tác giả + thể loại -->
                    <!-- Thêm sau phần title -->
                    <TextView
                        android:id="@+id/txtAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tác giả: ..."
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thể loại: ..."
                        android:textSize="16sp" />

                    <!-- Hàng nút + icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                        <!-- Nút 1 -->
                        <Button
                            android:id="@+id/btnReadLastChapter"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="Tiếp tục đọc"
                            android:textSize="14sp"
                            android:backgroundTint="@color/purple_700"
                            android:textColor="@android:color/white" />

                        <!-- Nút 2 -->
                        <Button
                            android:id="@+id/btnReadFirstChapter"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="Đọc từ đầu"
                            android:textSize="14sp"
                            android:backgroundTint="@color/purple_700"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/btnYeuthich"
                        android:ellipsize="end"
                        android:text="Yêu thích"
                        android:textSize="14sp"
                        android:backgroundTint="@color/purple_700"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tóm tắt -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung tóm tắt"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tom tat tai day"
                android:textSize="16sp"
                android:paddingTop="4dp" />

            <!-- Danh mục liên quan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách chương"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChapters"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
